<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 构造方法创建Student Bean -->
    <bean id="student1" class="xyz.mlxkj.Exp1.model.Student">
        <constructor-arg value="1"/>
        <constructor-arg value="John Doe"/>
    </bean>

    <!-- 静态工厂方法创建Student Bean -->
    <bean id="student2" class="com.example.StudentFactory" factory-method="createStudent">
        <constructor-arg value="2"/>
        <constructor-arg value="Jane Doe"/>
    </bean>

    <!-- 实例工厂方法创建Student Bean -->
    <bean id="studentFactory" class="com.example.StudentFactoryInstance"/>
    <bean id="student3" factory-bean="studentFactory" factory-method="createStudent">
        <constructor-arg value="3"/>
        <constructor-arg value="Sam Smith"/>
    </bean>

    <!-- FactoryBean创建Student Bean -->
    <bean id="student4FactoryBean" class="com.example.StudentFactoryBean"/>
    <bean id="student4" factory-bean="student4FactoryBean" factory-method="getObject"/>

    <!-- Classroom Bean -->
    <bean id="classroom" class="xyz.mlxkj.Exp1.model.Classroom">
        <property name="id" value="101"/>
        <property name="name" value="Mathematics"/>
        <!-- 注入学生集合 -->
        <property name="students">
            <list>
                <ref bean="student1"/>
                <ref bean="student2"/>
                <ref bean="student3"/>
                <ref bean="student4"/>
            </list>
        </property>
    </bean>

    <!-- 自动装配班级对象到学生 -->
    <bean id="studentAuto" class="com.example.Student" autowire="byName">
        <constructor-arg value="4"/>
        <constructor-arg value="Alice Brown"/>
        <property name="classroom" ref="classroom"/> <!-- 实际上这个属性会被自动装配覆盖 -->
    </bean>
</beans>